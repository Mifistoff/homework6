<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th>Admin</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.body %></td>
        <td><%= User.find(task.user_id).email %></td>
        <td><%= task.admin_id.nil? ? 'No Supported Admin' : Admin.find(task.admin_id).email%></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', admin_task_path(task.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
